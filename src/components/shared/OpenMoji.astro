---
import generalUtil from '../../util/generalUtil'
import openmojiJsonUtil from '../../util/openmojiJsonUtil'

const {hex} = Astro.props;
const height = Astro.props.size || '1.4em';

const emojiData = openmojiJsonUtil.getDataForEmojiByHex(hex);
const emojiSvg = generalUtil.getFilePathEmojiImage(emojiData.hexcode);
---
<span class="emojiForTextWrapper">
	<style lang="scss">
		
		.emojiForTextWrapper{
			vertical-align: middle;
			margin-left: -0.2em;
			margin-right: -0.2em;
		}
		.emojiForText{
			display: inline-block;
			margin: 0;
			min-width: initial;
			max-width: initial;
		}
	</style>
	<img
		alt={emojiData.annotation + '-emoji'}
		class="emojiForText"
		style={"height:" + height + ";width:" + height}
		src={emojiSvg}>
</span>